<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <!-- Overrides the list view press color-->
        <item name="android:activatedBackgroundIndicator">@drawable/item_list_selector</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@android:color/white</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="pageColor">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">4dp</item>
        <item name="centered">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="menuItemText" parent="mediumToBigText">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <!-- Standard font sizes -->

    <style name="extraHugeText">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="hugeText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="bigToHugeText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="bigText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mediumToBigText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mediumText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="smallToMediumText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="smallText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="miniToSmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="miniText">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
