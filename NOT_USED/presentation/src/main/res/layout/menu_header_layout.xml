<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/logo_banner_height"
    android:clickable="true"
    android:touchscreenBlocksFocus="true">

    <ImageView
        android:id="@+id/logoMenuImage"
        android:layout_width="@dimen/logo_menu_size"
        android:layout_height="@dimen/logo_menu_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/big_padding"
        android:layout_marginTop="@dimen/big_padding"
        android:src="@drawable/abc_ratingbar_full_material" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/logoMenuImage"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/isDevelopmentText"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:text="IS DEVELOPMENT!"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>